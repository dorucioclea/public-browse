{% from 'components/panel/macro.njk' import panel %}
{% from 'components/checkboxes/macro.njk' import checkboxes %}

{% macro capabilityFilters(capabilitiesData) %}

  {% macro capabilityCheckboxes(capabilitiesData) %}
    {{ checkboxes({
      "idPrefix": "capabilities",
      "name": "capabilities",
      "fieldset": {
        "legend": {
          "text": "Filter your capabilites?"
        }
      },
      "items": capabilitiesData
    }) }}
  {% endmacro %}

  {{ panel({
    "HTML": capabilityCheckboxes(capabilitiesData) 
  }) }}
{% endmacro %}
