{% from '../components/view-question-title.njk' import viewQuestionTitle %}
{% from '../components/view-question-data-text.njk' import viewQuestionDataText %}
{% from '../components/view-question-data-link.njk' import viewQuestionDataLink %}

{% macro viewSolutionDescription(section) %}
  {% if section %}
    <div data-test-id="view-solution-description">
      <div class="nhsuk_title">
        <h3>Solution description</h3>
      </div>

      {% if section.answers.summary %}
        <div data-test-id="view-section-question-summary" class="nhsuk-table__row">
            {{ viewQuestionTitle('summary', 'Summary') }}
            {{ viewQuestionDataText(section.answers.summary) }}
        </div>
      {% endif %}

      {% if section.answers.description %}
        <div data-test-id="view-section-question-description" class="nhsuk-table__row">
            {{ viewQuestionTitle('description', 'About the solution') }}
            {{ viewQuestionDataText(section.answers.description) }}
        </div>
      {% endif %}
      
      {% if section.answers.link %}
        <div data-test-id="view-section-question-link" class="nhsuk-table__row">
          {{ viewQuestionDataLink(section.answers.link) }}
        </div>
      {% endif %}
    </div>
  {% endif %}
{% endmacro %}